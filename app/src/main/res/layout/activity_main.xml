<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:maxLines="2"
        android:hint="0.00"
        android:textSize="40dp"
        android:inputType="none"
        android:editable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:maxLines="2"
            android:hint="0.00"
            android:textSize="60dp"
            android:inputType="none"
            android:editable="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setReset"
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="50dp"
                android:layout_weight="1"

                android:background="@color/colorAccent"
                />
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setBack"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⌫"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setCalculation"
                android:id="@+id/root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setCalculation"
                android:id="@+id/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>

            <Button
                android:layout_marginRight="2dp"
                android:onClick="setCalculation"
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:onClick="setCalculation"
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="÷"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:onClick="setCalculation"
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:onClick="setCalculation"
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:id="@+id/one"
                android:onClick="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:onClick="setCalculation"
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setCalculation"
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ł"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="number"
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:layout_marginRight="2dp"
                android:onClick="setDot"
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>
            <Button
                android:onClick="setEqual"
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="50dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>